<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.cameron.wordsmith.StartScreenActivity"
    tools:showIn="@layout/activity_start_screen">

    <Button
        android:layout_width="wrap_content"
        android:width="90dp"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="One Player"
        android:id="@+id/singlePlayer"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:background="@color/button"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Two Player"
        android:id="@+id/twoPlayer"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/singlePlayer"
        android:layout_alignEnd="@+id/singlePlayer"
        android:onClick="twoPlayer" />
</RelativeLayout>
